@model TPLOCAL1.Models.FormModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page de validation</title>

    <link rel="stylesheet" href="~/resources/Index.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Welcome to TP HN</h1>
    </header>

    <main>
        <nav>
            <ul>
                <li><a href="/Home/Index/">Accueil</a></li>
                <li><a href="#">Liste des avis</a></li>
            </ul>
        </nav>

        <section>
            <p>
                Votre formulaire a bien été pris en compte
                @Html.DisplayFor(modelItem => Model.LastName)
            </p>
            <section>
                    <table>
                        <thead>
                            <tr>
                                <th>Informations personelles</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Nom</td>
                                <td>@Html.DisplayFor(modelItem => Model.LastName)</td>
                            </tr>
                            <tr>
                                
                                <td>Prénom</td>
                                <td>@Html.DisplayFor(modelItem => Model.FirstName)</td>
                            </tr>
                            <tr>
                                <td>Sexe</td>
                                <td>@Html.DisplayFor(modelItem => Model.Sexe)</td>
                            </tr>
                            <tr>
                                <td>Adresse</td>
                                <td>@Html.DisplayFor(modelItem => Model.Address)</td>
                            </tr>
                            <tr>
                                <td>Code Postal</td>
                                <td>@Html.DisplayFor(modelItem => Model.Zipcode)</td>
                            </tr>
                            <tr>
                                <td>Ville</td>
                                <td>@Html.DisplayFor(modelItem => Model.Town)</td>
                            </tr>
                            <tr>
                                <td>Adresse Mail</td>
                                <td>@Html.DisplayFor(modelItem => Model.Email)</td>
                            </tr>

                        </tbody>
                    </table>

                    <table>
                        <thead>
                            <tr>
                                <th>Informations formation suivie</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Date de début de formation</td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.StartDate)</td>                       
                            </tr>
                            <tr>
                                <td>Formation suivie</td>
                                <td>@Html.DisplayFor(modelItem => Model.TrainingType)</td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <thead>
                            <tr>
                                <th>Avis sur la formations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Formation Cobol</td>
                                <td>@Html.DisplayFor(modelItem => Model.CobolTraining)</td>
                            </tr>
                            <tr>
                                <td>Formation C#</td>
                                <td>@Html.DisplayFor(modelItem => Model.CSTraining)</td>
                            </tr>
                        </tbody>
                    </table>
            </section>
        </section>
    </main>

</body>
</html>